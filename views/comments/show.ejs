<%- include('../partials/head')%>

    <div class="body">
        <div class="container">
            <h1 class="h1">Comment from <%= comment.username %>
            </h1>
            <div class="card">
                <div class="card-header">
                    <b>
                        <%= comment.username%>
                    </b> said:
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <%= comment.comment%>
                    </p>
                    <div class="buttons">

                        <a href="/comments/<%= comment.id%>/edit" class="btn">Edit Comment</a>
                    </div>
                </div>
            </div>
            <div>
                <a href="/comments" class="newComment">All Comments</a>
                <a class="newComment" href="/comments/new">New Comment</a>
            </div>
            <form method="POST" action="/comments/<%= comment.id%>?_method=DELETE">
                <button class="btn-secondary">Delete</button>
            </form>
        </div>

    </div>

    </div>
    </div>
    </body>

    </html>