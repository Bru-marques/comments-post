<%- include('../partials/head')%>

    <div class="body">
        <div class="container">
            <h1>Edit your comment <%= comment.username%>
            </h1>
            <form method="POST" action="/comments/<%=comment.id%>?_method=PATCH">
                <section>
                    <label class="form-label" for="comment">Comment text</label>
                    <textarea class="form-control" name="comment" id="comment" cols="100"
                        rows="5"><%= comment.comment%></textarea>
                </section>
                <a class="newComment" href="/comments">All Comments</a>
                <button class="btn">Save</button>
            </form>
        </div>
    </div>
    </body>

    </html>